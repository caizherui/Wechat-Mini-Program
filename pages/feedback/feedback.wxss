/* pages/feedback/feedback.wxss */
page {
  background-color: #eeeeee;
}

.main{
  padding: 20rpx;
  background-color: #eeeeee; 
  color: #666;
}

.main .title{
  font-size: 35rpx;
}

.main .tips{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.main .tips text{
  width: 28%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 18rpx 6rpx;
  font-size: 32rpx;
}

.main .content{
  background-color: #fff;
  margin-top: 20rpx;
}

.main .content textarea{
  height: 300rpx;
  padding: 10rpx;
}

.main .content .place{
  height: 30rpx;
}

.main .content .calculation{
  position: absolute;
  right: 5%;
  top: 664rpx;
  font-size: 35rpx;
  color: #666;
}

.main .content .tool{
  display: flex;
  flex-wrap: wrap;
  margin-top: 25rpx;
  padding-bottom: 30rpx;
}

.main .content .tool button{
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 11rpx;
  color: #ccc;
}

.main .content .tool .up_img_item{
  margin-left: 20rpx;
  margin-top: 11rpx;
}

.main .form{
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  text-align: center;
}

.main .form button{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 15rpx;
  margin: 0;
  width: 30%;
  font-size: 36rpx;
}

.window{
  position:absolute;
  height: 1000rpx;
  width: 400rpx;
  transform: translate(50%,50%);
  background: salmon;
}