page{
  background-color: #dedede;
  padding: 20rpx;
  width: auto;
}

.search{
  height: 60rpx;
  display: flex;
}

.search input{
  background-color: #fff;
  width: 600rpx;
  margin-left: 5rpx;
  padding-left: 25rpx;
  height: 100%;
}

.search button{
  background-color: #fff;
  width: 110rpx;
  height: 100%;
  font-size: 28rpx;
  padding: 0;
  margin: 0 15rpx 0rpx 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content{
  margin-top: 30rpx;
}

.content .item{
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}